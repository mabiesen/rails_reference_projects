<p id="notice"><%= notice %></p>

<h1>Page Files</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Name</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @page_files.each do |page_file| %>
      <tr>
        <td><%= page_file.type %></td>
        <td><%= page_file.name %></td>
        <td><%= page_file.link %></td>
        <td><%= link_to 'Show', page_file %></td>
        <td><%= link_to 'Edit', edit_page_file_path(page_file) %></td>
        <td><%= link_to 'Destroy', page_file, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Page File', new_page_file_path %>
